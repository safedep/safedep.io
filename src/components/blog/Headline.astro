---
const { title = await Astro.slots.render('default'), subtitle = await Astro.slots.render('subtitle') } = Astro.props;
---

<header class="mb-8 md:mb-12 text-center max-w-3xl mx-auto">
  <h1
    class="text-4xl md:text-5xl font-bold leading-tight tracking-tighter font-heading pb-2 relative inline-block mb-4"
    set:html={title}
  />
  <div class="w-32 h-1 bg-primary mx-auto mb-6"></div>
  {
    subtitle && (
      <div
        class="mt-2 md:mt-3 mx-auto text-lg text-gray-600 dark:text-slate-300 font-medium max-w-2xl"
        set:html={subtitle}
      />
    )
  }
</header>
