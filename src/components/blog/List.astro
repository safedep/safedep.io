---
import Item from '~/components/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<ul class="grid gap-8 md:gap-10">
  {
    posts.map((post) => (
      <li class="mb-4 md:mb-6">
        <Item post={post} />
      </li>
    ))
  }
</ul>
