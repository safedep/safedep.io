---
import heroImage from "assets/vet-logo.png";
import { Image } from "@astrojs/image/components";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Image src={heroImage} alt="SafeDep vet Architecture" />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Trust and safety for open source software consumers
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      SafeDep helps software development teams to vet open source dependencies
      before use. Eliminate the risk of vulnerable and malicious dependencies.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://docs.safedep.io"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bi:arrow-up-right-circle-fill" />
        Get started
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/safedep/vet"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub Repo
      </Link>
    </div>
  </div>
</main>
