---
import Headline from '~/components/ui/Headline.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';
import GrayscaleLogo from '~/assets/images/grayscale-logo.png';
import TransposeLogo from '~/assets/images/transpose-logo.png';
import GoogleCloudForStartupsLogo from '~/assets/images/GoogleCloudForStartups.png';
import MicrosoftForStartupsLogo from '~/assets/images/MicrosoftForStartups.svg';
import AbhisekProPic from '~/assets/images/abhisek.jpg';

const metadata = {
  title: 'About us',
};

const team = [
  {
    name: 'Abhisek Datta',
    role: 'Founder, CEO',
    image: AbhisekProPic,
    linkedIn: 'https://linkedin.com/in/abh1sek',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="About us">
    <Fragment slot="title"> Safe and Trusted Open Source </Fragment>

    <Fragment slot="subtitle">
      We are on a mission to help software development teams world-wide to continue shipping fast by leveraging open
      source software <u>without the <a href="https://safedep.io/why-oss-risks-larger-than-sca">inherited risks</a></u>
    </Fragment>

    <Fragment slot="content">
      <Headline
        subtitle={'We are backed by incredible investors and partners who believe in our mission.'}
        tagline={'#SUPPORTERS'}
      />

      <div class="flex flex-col flex-wrap">
        <div class="flex flex-row justify-center">
          <div class="flex justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
            <Image src={GrayscaleLogo} alt={''} class="max-h-12" width={200} layout="constrained" />
          </div>
          <div class="flex justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
            <Image src={TransposeLogo} alt={''} class="max-h-12" width={220} width={220} layout="constrained" />
          </div>
        </div>
        <div class="flex flex-row justify-center">
          <div class="flex justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
            <Image
              src={GoogleCloudForStartupsLogo}
              alt={''}
              class="max-h-12"
              width={300}
              height={100}
              layout="constrained"
            />
          </div>
          <div class="flex justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
            <Image
              src={MicrosoftForStartupsLogo}
              alt={''}
              class="max-h-12"
              width={300}
              height={100}
              layout="constrained"
            />
          </div>
        </div>
      </div>
    </Fragment>

    <div class="invisible">
      <Fragment slot="content">
        <Headline subtitle={'Meet the team behind the mission.'} tagline={'#TEAM'} />

        <div class="flex flex-wrap justify-center gap-x-6 sm:gap-x-12 lg:gap-x-12">
          {
            team.map((member) => (
              <div class="flex-col justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
                <Image
                  src={member.image}
                  alt={''}
                  class="max-h-12 rounded-full"
                  width={180}
                  width={180}
                  layout="constrained"
                />
                <div class="text-center">
                  <h3 class="text-lg font-bold">{member.name}</h3>
                  <p class="text-sm text-gray-500">{member.role}</p>
                  <div class="flex justify-center gap-4">
                    <a href={member.linkedIn} target="_blank" rel="noopener noreferrer">
                      <Icon name="tabler:brand-linkedin" class="w-5 h-5" />
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </Fragment>
    </div>
  </Hero>
</Layout>
