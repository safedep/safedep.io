---
import Headline from '~/components/ui/Headline.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';
import GrayscaleLogo from '~/assets/images/grayscale-logo.png';
import TransposeLogo from '~/assets/images/transpose-logo.png';
import GoogleCloudForStartupsLogo from '~/assets/images/GoogleCloudForStartups.png';
import AbhisekProPic from '~/assets/images/abhisek.jpg';
import ManavProPic from '~/assets/images/manav.jpg';
import KunalProPic from '~/assets/images/kunal-khare.jpg';

const metadata = {
  title: 'About us',
};

const team = [
  {
    name: 'Abhisek Datta',
    role: 'Founder, CEO',
    image: AbhisekProPic,
    linkedIn: 'https://linkedin.com/in/abh1sek',
  },
  {
    name: 'Manav Sethi',
    role: 'Software Engineer',
    image: ManavProPic,
    linkedIn: 'https://www.linkedin.com/in/insaanimanav/',
  },
  {
    name: 'Kunal Khare',
    role: 'Software Engineer',
    image: KunalProPic,
    linkedIn: 'https://www.linkedin.com/in/kunaldevxxx/',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="About us">
    <Fragment slot="title">
      Safe and Trusted Open Source
    </Fragment>

    <Fragment slot="subtitle">
      We are on a mission to help software development teams world-wide to continue shipping fast
      by leveraging open source software but without the 
      <a href="http://localhost:4321/why-oss-risks-larger-than-sca">inherited risks.</a>
    </Fragment>

    <Fragment slot="content">
      <Headline
        subtitle={'We are backed by incredible investors and partners who believe in our mission.'}
        tagline={'#SUPPORTERS'}
      />

      <div class="flex flex-wrap justify-center gap-x-6 sm:gap-x-12 lg:gap-x-12">
        <div class="flex justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
          <Image src={TransposeLogo} alt={''} class="max-h-12" width={220} width={220} layout="constrained" />
        </div>
        <div class="flex justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
          <Image src={GrayscaleLogo} alt={''} class="max-h-12" width={200} layout="constrained" />
        </div>
        <div class="flex justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
          <Image src={GoogleCloudForStartupsLogo} alt={''} class="max-h-12" width={300} height={100} layout="constrained" />
        </div>
      </div>
    </Fragment>

    <Fragment slot="content">
      <Headline
        subtitle={'Meet the team behind the mission.'}
        tagline={'#TEAM'}
      />

      <div class="flex flex-wrap justify-center gap-x-6 sm:gap-x-12 lg:gap-x-12">
        {team.map((member) => (
          <div class="flex-col justify-center col-span-1 my-2 lg:my-4 py-1 px-3 rounded-md dark:bg-gray-200">
          <Image src={member.image} alt={''} class="max-h-12 rounded-full" width={180} width={180} layout="constrained" />
          <div class="text-center">
            <h3 class="text-lg font-bold">{member.name}</h3>
            <p class="text-sm text-gray-500">{member.role}</p>
            <div class="flex justify-center gap-4">
              <a href={member.linkedIn} target="_blank" rel="noopener noreferrer">
                <Icon name="tabler:brand-linkedin" class="w-5 h-5" />
              </a>
            </div>
          </div>
        </div>
        ))}
      </div>
    </Fragment>
  </Hero>
</Layout>
